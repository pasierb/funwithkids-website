---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import InterestList from '~/components/widgets/InterestList.astro';
import SpotsMapFull from '~/components/widgets/SpotsMapFull';

const metadata = {
  title: 'FunWithKids.ch',
  ignoreTitleTemplate: true,
};

const features = [
  {
    icon: '🗺️',
    title: 'Explore charming locations through an interactive map',
  },
  {
    icon: '👶',
    title: "Tailor your search to match your child's age for the perfect adventure",
  },
  {
    icon: '🧻',
    title: 'Rest easy knowing that restroom facilities are conveniently close',
  },
  {
    icon: '🐕',
    title: 'Bring your furry friend along - find places that welcome your dog too!',
  },
];
---

<Layout metadata={metadata}>
  <Hero
    title="Discover, Enjoy, Swiss Family Adventures."
    subtitle="Explore our app for awesome kid-friendly spots in Switzerland! Unleash joyful adventures, create memories, and unwind while your little ones play. Crafted by parents, for parents – your family's perfect guide!"
  >
    <div slot="content">
      <div class="mx-auto max-w-3xl">
        <!-- Content goes here -->
        <ul class="text-lg">
          {
            features.map((feature) => (
              <li class="flex gap-4">
                <span>{feature.icon}</span>
                <span>{feature.title}</span>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </Hero>

  <SpotsMapFull client:only="react" />

  <section class="relative">
    <div class="absolute inset-0 pointer-events-none -z-[1]" aria-hidden="true">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </div>
    <div class="relative px-4 md:px-6 py-12 md:py-16 lg:py-20 text-default max-w-screen-xl mx-auto">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <!-- We've used 3xl here, but feel free to try other max-widths based on your needs -->
        <div class="mx-auto max-w-3xl">
          <InterestList />
        </div>
      </div>
    </div>
  </section>
</Layout>
